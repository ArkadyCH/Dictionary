<h1>Авторизация</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3 well add_word">
		<%= form_tag '/login' do %>
		<div class="form-group">
			<%= label_tag :email %>
			<%= text_field_tag :email, nil, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= label_tag :password %>
			<%= password_field_tag :password, nil, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= link_to 'Ещё не зарегистрировались ?' , new_user_path , :class=>"nav-link float-right" %>
		</div>
			<%= submit_tag 'Log in', class: 'btn btn-success' %>
			<% end %>
		</div>
</div>