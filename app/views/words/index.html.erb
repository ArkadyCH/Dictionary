<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Слово</th>
      <th scope="col">Перевод</th>
      <th scope="col" colspan="2">Операции</th>
    </tr>
  </thead>
  <tbody>
    <% @words.each do |word| %> <!-- циклом проходит по массиву -->
    <tr>
      <th scope="row"><%= word.id %></th> <!-- вставляю id слова -->
      <td><%= word.word %></td> <!-- англ слово -->
      <td><%= word.transfer %></td> <!-- русское слово -->
      <td class="col col-lg-1"><%= link_to 'Изменить' , edit_word_path(word)%></td> <!-- ссылка на изменение  -->
      <td class="col col-lg-2"><%= link_to 'Удалить' , word_path(word), method: :delete %></td> <!-- ссылка на удаление слова -->
    </tr>
    <% end %> <!-- конец цикла -->
  </tbody>
</table>