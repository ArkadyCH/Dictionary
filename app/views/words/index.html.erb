<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Слово</th>
      <th scope="col">Перевод</th>
      <th scope="col" colspan="2">Операции</th>
    </tr>
  </thead>
  <tbody>
    <% @words.each do |word| %>
    <% if  %>
    <tr>
      <th scope="row"><%= word.id %></th>
      <td><%= word.word %></td>
      <td><%= word.transfer %></td>
      <td class="col col-lg-1"><%= link_to 'Изменить' , edit_word_path(word)%></td>
      <td class="col col-lg-2"><%= link_to 'Удалить' , word_path(word), method: :delete %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>